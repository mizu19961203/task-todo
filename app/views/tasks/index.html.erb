<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <td>タスク名</td>
      <td>内容</td>
      <td>開始</td>
      <td>終了</td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.date_start %></td>
        <td><%= task.date_fin %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '追加', new_task_path %>

<div id="calendar"></div>

